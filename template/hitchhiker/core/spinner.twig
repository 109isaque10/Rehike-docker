{#
    Implements a common template for YouTube's spinner.
#}
{%- macro render(label) -%}
<p class="yt-spinner">
    <span title="{{ rehike.i18n.get("global", "loadingIconLabel") }}" class="yt-spinner-img  yt-sprite"></span>
    <span class="yt-spinner-message">
        {{ label }}
    </span>
</p>
{% endmacro %}